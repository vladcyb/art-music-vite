{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ES2020",
    "paths": {
      "@*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@assets/*": ["src/assets/*"],
      "@services/*": ["src/services/*"],
      "@shared/*": ["src/shared/*"]
    },
    "moduleResolution": "Node"
  }
}